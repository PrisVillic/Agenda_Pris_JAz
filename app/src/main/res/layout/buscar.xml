<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFCCFF" >

    <TextView
        android:id="@+id/id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="10dp"
        android:text="Id"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/apellido_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:layout_above="@+id/lvlitems"
        android:layout_toLeftOf="@+id/nombre_txt"
        android:layout_toStartOf="@+id/nombre_txt" />

    <TextView
        android:id="@+id/nombre_txt"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginRight="138dp"
        android:layout_marginEnd="138dp"
        android:layout_alignBaseline="@+id/apellido_txt"
        android:layout_alignBottom="@+id/apellido_txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/lvlitems"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_txt" />

</RelativeLayout>