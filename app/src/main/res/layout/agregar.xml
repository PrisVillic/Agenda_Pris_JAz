<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCFFF">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre"
            android:id="@+id/nombre_txt"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/nombre_input"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Apellido"
            android:id="@+id/apellido_txt"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/apellido_input"
            android:layout_row="1"
            android:layout_column="1"
            android:inputType="" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Edad"
            android:id="@+id/edad_txt"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#000000"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TÃ©lefono"
            android:id="@+id/tel_txt"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edad_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="2"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email"
            android:id="@+id/email_txt"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/telefono_input"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_input"
            android:layout_row="4"
            android:layout_column="1" />


    </GridLayout>

    <TextView
        android:id="@+id/titulo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Introduzca los datos!!!"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/agregar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="agregar_clicked"
        android:text="Agregar"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="#CCCFFF"
        android:textColor="#9333FF"/>

</RelativeLayout>